<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            alignment="CENTER" spacing="10" minWidth="-Infinity" maxWidth="Infinity" minHeight="-Infinity"
            maxHeight="Infinity" fx:id="vBox"
            fx:controller="us.hourgeon.jmessenger.client.JoinDialogController">

    <padding>
        <Insets top="32" bottom="32" right="32" left="32"/>
    </padding>

    <Label>Select the channel you want to join</Label>

    <ListView fx:id="channelsList"/>

    <Button fx:id="joinButton">Join</Button>

</VBox>
