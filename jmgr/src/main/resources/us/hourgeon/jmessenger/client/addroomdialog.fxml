<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10" minWidth="-Infinity" maxWidth="Infinity" minHeight="-Infinity"
      maxHeight="Infinity" fx:controller="us.hourgeon.jmessenger.client.AddChannelDialogController">

    <padding>
        <Insets top="32" bottom="32"/>
    </padding>

    <HBox alignment="TOP_CENTER" fx:id="privateBox">
        <CheckBox fx:id="privateCheckbox"/>
        <Label>The room is private</Label>
    </HBox>

    <Label fx:id="nameInstruction">Name of the room</Label>
    <TextField maxWidth="200" fx:id="nameField"/>
    <Label fx:id="inviteLabel">People to invite</Label>
    <ListView maxWidth="200" prefHeight="128" fx:id="usersList"/>

    <Button fx:id="confirmButton">Add</Button>

</VBox>
